<?xml version="1.0"?>
<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="text-center col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
        <form class="vertical-form">
            <fieldset class="formgroup">
                <label for="login-username">Your username</label>
                <input id="login-username" type="login" class="form-control login-form__input-field center-block"
                           name="username" placeholder="sasay@mail.ru" required="required">

                </input>
            </fieldset>
            <fieldset class="formgroup">
                <label for="login-password">Your password</label>
                <input id="login-password" type="password" class="form-control login-form__input-field center-block"
                           name="password" placeholder="Your magical password" required="required" >
                    <fest:attributes>
                        <fest:attribute name="pattern">
                            .{3,}
                        </fest:attribute>
                    </fest:attributes>
                </input>
            </fieldset>
            <div class="form-group">
                <button id="login-form__tn-success"
                     type="submit" role="button" class="btn btn-circle btn-lg btn-lg-success" style="text-decoration: none">OK</button>
                <fest:include src="./btn_back.xml"/>
            </div>
        </form>

    </div>
</fest:template>